@model CvManager.ViewModels.LoginVM
@{
  ViewData["Title"] = "Login";
  Layout = "_Layout";
}

<div class="container">

  <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

          <div class="d-flex justify-content-center py-4">
            <a href="index.html" class="logo d-flex align-items-center w-auto">
              <img src="assets/img/logo.png" alt="">
              <span class="d-none d-lg-block">ResumeLab</span>
            </a>
          </div><!-- End Logo -->

          <div class="card mb-3">

            <div class="card-body">

              <div class="pt-4 pb-2">
                <h5 class="card-title text-center pb-0 fs-4">Inicia sesión en tu cuenta</h5>
              </div>

              <form class="row g-3 needs-validation" novalidate asp-controller="Account" asp-action="Login"
                method="post">

                <div class="col-12">
                  <!--label for="Email" class="form-label">Correo electrónico</label-->
                  <div class="input-group has-validation">
                    <span class="input-group-text" id="inputGroupPrepend"><i class="bi bi-person-fill"></i></span>
                    <input type="email" class="form-control" id="Email" name="Email" required asp-for="Email" placeholder="Correo electrónico">
                    <div class="invalid-feedback">Por favor ingresa tu correo.</div>
                  </div>
                </div>

                <div class="col-12">
                  <!--label for="Password" class="form-label">Password</label-->
                  <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" placeholder="Contraseña" required>
                  <div class="invalid-feedback">Por favor ingresa tu contraseña.</div>
                </div>
                @if (ViewData["Message"] != null)
                {
                  <div class="col-12">
                    <div class="alert alert-danger" role="alert">@ViewData["Message"]</div>
                  </div>
                }
                <div class="col-12">
                  <button class="btn btn-primary w-100" type="submit">Ingresar</button>
                </div>
                <div class="col-12">
                  <a class="btn btn-danger w-100" href="@Url.Action("LoginWithGoogle", "Account")">Ingresar con Google</a>
                </div>
                <div class="col-12">
                  <p class="small mb-0">¿Aún no tienes cuenta? <a asp-controller="Account"
                      asp-action="Register">Regístrate</a></p>
                </div>
              </form>

            </div>
          </div>

        </div>
      </div>
    </div>

  </section>

</div>

